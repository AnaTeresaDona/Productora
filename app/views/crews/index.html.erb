<p id="notice"><%= notice %></p>

<h1>Integrantes</h1>

<div class="table-responsive">
  <table class="table table-bordered text-center">
    <thead class="thead-dark">
      <tr>
        <th>Nombre</th>
        <th>Grupo</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @crews.each do |crew| %>
        <tr>
          <td><%= crew.name %></td>
          <td><%= crew.group.name %></td>
          <td><%= link_to 'Mostrar', crew %></td>
          <td><%= link_to 'Editar', edit_crew_path(crew) %></td>
          <td><%= link_to 'Destruir', crew, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'Agregar Integrante', new_crew_path %>
